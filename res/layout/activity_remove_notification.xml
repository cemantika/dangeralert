<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RemoveNot_layout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".RemoveNotificationActivity" >
    
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/AddNot_textView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="@string/actRemNot_cabec_list"
            android:background="@color/actMain_cabec_silver1"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </RelativeLayout>
    
    <ListView
		android:id="@+id/removeNot_listview"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:divider="@color/actMain_cabec_silver1"
		android:dividerHeight="1sp"
	/>

</LinearLayout>